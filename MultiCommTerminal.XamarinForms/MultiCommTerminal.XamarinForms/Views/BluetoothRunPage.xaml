<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiCommTerminal.XamarinForms.Views.BluetoothRunPage">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal">

                <StackLayout Orientation="Vertical">
                    <ListView x:Name="lstCmds" VerticalOptions="Center" 
                      ItemSelected="lstCmds_ItemSelected"
                      MinimumHeightRequest="20" MinimumWidthRequest="20">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding Display}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackLayout Orientation="Horizontal" Margin="0,30" >
                        <Button x:Name="btnSend" Text="Send" Clicked="btnSend_Clicked" >
                        </Button>
                        <Entry x:Name="entryCmd" WidthRequest="130"  >
                        </Entry>
                    </StackLayout>
                </StackLayout>
                <ListView x:Name="lstResponses" VerticalOptions="Center" 
                      MinimumHeightRequest="20" MinimumWidthRequest="20">
                    <!--<ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>-->
                </ListView>
            </StackLayout>

            <!--<Label x:Name="txtConnectTry" Text="Try:0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="txtOk" Text="OK:0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="txtFail" Text="Fail:0"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Button Text="Refresh" Clicked="Refresh_Clicked" >
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>