<Window x:Class="MultiCommTerminal.NetCore.WindowObjs.MsgBoxWifiCred"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCommTerminal.NetCore.WindowObjs"
        mc:Ignorable="d"
        xmlns:controls="clr-namespace:MultiCommTerminal.UserControls"
        xmlns:wpfHelper="clr-namespace:MultiCommTerminal.WPF_Helpers"
        Style="{StaticResource MyWindowStyle}" Title="" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded" Closing="Window_Closing"
        MinHeight="100" MinWidth="200" MaxHeight="800" MaxWidth="900">
    <Grid>
        <StackPanel>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="{Binding Source={x:Static wpfHelper:TxtBinder.HostNameIp}}"  Style="{StaticResource NameLabelLeft}" />
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtHostName"  Style="{ StaticResource TxtBoxRight}" />

                <Label Grid.Row="1" Grid.Column="0" Content="{Binding Source={x:Static wpfHelper:TxtBinder.NetworkServicePort}}" Style="{StaticResource NameLabelLeft}" />
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtServiceName" Style="{ StaticResource TxtBoxRight}" />

                <Label Grid.Row="2" Grid.Column="0" Content="{Binding Source={x:Static wpfHelper:TxtBinder.NetworkSecurityKey}}"  Style="{StaticResource NameLabelLeft}"/>
                <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="txtPwd"  Style="{StaticResource PwdBoxRight}"/>
            </Grid>

            <DockPanel HorizontalAlignment="Center" Margin="10">

                <TextBlock FlowDirection="LeftToRight" VerticalAlignment="Center"  Text="{Binding Source={x:Static wpfHelper:TxtBinder.Save}}" />
                <CheckBox x:Name="chkSave" VerticalAlignment="Center" FlowDirection="LeftToRight" IsChecked="True" Margin="5,0,10,0" />

                <controls:UC_IconButton x:Name="btnOk" Style="{StaticResource TextIconButton}" Margin="5" 
                    Content="{Binding Source={x:Static wpfHelper:TxtBinder.OK}}"
                    IconSource="{Binding Source={x:Static wpfHelper:IconBinder.Save}}" 
                    Click="btnOk_Click" />
                <controls:UC_IconButton x:Name="btnCancel" Style="{StaticResource TextIconButton}" Margin="5" 
                    Content="{Binding Source={x:Static wpfHelper:TxtBinder.Cancel}}"
                    IconSource="{Binding Source={x:Static wpfHelper:IconBinder.Cancel}}" 
                    Click="btnCancel_Click" />
            </DockPanel>
        </StackPanel>
    </Grid>

</Window>
